{
    "html.filetypes": [
        "jsx",
        "html",
        "handlebars",
        "htmldjango",
        "blade"
    ],
    "languageserver": {
        "go": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod"
            ],
            "filetypes": [
                "go"
            ],
            "args": [
                "-remote=auto"
            ]
        },
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        }
    }
}
